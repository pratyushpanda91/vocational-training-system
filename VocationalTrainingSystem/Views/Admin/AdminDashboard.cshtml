@{
    ViewBag.Title = "Admin Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #f2f5f9;
            margin: 0;
            padding: 0;
        }

        .dashboard-wrapper {
            max-width: 1200px;
            margin: 50px auto;
            padding: 40px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

        h2 {
            text-align: center;
            color: #333;
            font-size: 28px;
            margin-bottom: 30px;
        }

        .user-table {
            width: 100%;
            border-collapse: collapse;
            overflow-x: auto;
        }

        .user-table th, .user-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        .user-table th {
            background-color: #007acc;
            color: white;
            font-weight: 600;
        }

        .user-table tr:hover {
            background-color: #f9f9f9;
        }

        .btn {
            padding: 8px 14px;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            color: white;
            margin: 3px;
            cursor: pointer;
            font-weight: 500;
            transition: background-color 0.3s ease;
        }

        .view-btn {
            background-color: #28a745;
        }

        .edit-btn {
            background-color: #007bff;
        }

        .delete-btn {
            background-color: #dc3545;
        }

        .btn:hover {
            opacity: 0.9;
        }

        .assign-btn {
            padding: 10px 18px;
            background-color: #0066cc;
            color: white;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            font-weight: 500;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

        .assign-btn:hover {
            background-color: #004f9e;
        }

        select, input[type="text"], input[type="password"] {
            padding: 10px 12px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 14px;
            width: 100%;
            margin-top: 5px;
        }

        .role-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 13px;
            color: #fff;
            font-weight: 500;
        }

        .role-badge.admin {
            background-color: #e67e22;
        }

        .role-badge.user {
            background-color: #3498db;
        }

        .role-badge.approver {
            background-color: #9b59b6;
        }

        form {
            margin: 0;
        }

        hr {
            margin: 40px 0;
            border: none;
            border-top: 1px solid #ccc;
        }

        .credential-form {
            max-width: 600px;
            margin: 20px auto;
            background: #f9fcff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.06);
            border: 1px solid #dce7f1;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
        }

        .form-group input:focus,
        .form-group select:focus {
            border-color: #007acc;
            outline: none;
            background-color: #eef7ff;
        }
    </style>
</head>
<body>

<div class="dashboard-wrapper">
    <h2>Admin Dashboard</h2>

    <table class="user-table">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Assigned Approver</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Sample Static Row: Replace with actual model loop -->
            <tr>
                <td>1</td>
                <td>John Doe</td>
                <td>john@example.com</td>
                <td><span class="role-badge admin">Admin</span></td>
                <td>
                    <form method="post" action="/Admin/AssignApprover" onsubmit="return confirmAssign(this);">
                        <input type="hidden" name="UserId" value="1" />
                        <select name="ApproverId" required>
                            <option value="">Select Approver</option>
                            <option value="2">Jane Approver</option>
                            <option value="3">Sam Smith</option>
                        </select>
                        <button type="submit" class="assign-btn">Assign</button>
                    </form>
                </td>
                <td>
                    <a class="btn view-btn" href="/Admin/View/1" title="View Profile">View</a>
                    <a class="btn edit-btn" href="/Admin/Edit/1" title="Edit User">Edit</a>
                    <a class="btn delete-btn" href="/Admin/Delete/1" title="Delete User" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        </tbody>
    </table>

    <hr />

    <h2>Assign Credentials to Approved Users</h2>

    <form method="post" action="/Admin/AssignCredentials" class="credential-form" onsubmit="return confirmAssignCredentials(this);">
        <div class="form-group">
            <label for="ApprovedUserId">Select Approved User</label>
            <select name="ApprovedUserId" id="ApprovedUserId" required>
                <option value="">-- Select Approved User --</option>
                <option value="4">Approved User 1</option>
                <option value="5">Approved User 2</option>
            </select>
        </div>

        <div class="form-group">
            <label for="UserName">Assign User ID</label>
            <input type="text" id="UserName" name="UserName" placeholder="Enter unique User ID" required />
        </div>

        <div class="form-group">
            <label for="Password">Assign Password</label>
            <input type="password" id="Password" name="Password" placeholder="Enter password" required />
        </div>

        <button type="submit" class="assign-btn">Generate Credentials</button>
    </form>
</div>

<script>
    function confirmAssign(form) {
        const select = form.querySelector("select[name='ApproverId']");
        const selectedText = select.options[select.selectedIndex].text;
        return confirm("Assign this user to approver: " + selectedText + "?");
    }

    function confirmAssignCredentials(form) {
        const userId = form.querySelector("#UserName").value;
        const password = form.querySelector("#Password").value;
        const userSelect = form.querySelector("#ApprovedUserId");
        const selectedUser = userSelect.options[userSelect.selectedIndex].text;

        if (userId && password) {
            return confirm(`Assign credentials to ${selectedUser}?\nUser ID: ${userId}`);
        }

        alert("Please fill out all fields.");
        return false;
    }

    // Tooltip enhancement (Optional)
    document.querySelectorAll("[title]").forEach(el => {
        el.addEventListener("mouseover", () => {
            el.setAttribute("data-tooltip", el.title);
            el.removeAttribute("title");
        });

        el.addEventListener("mouseout", () => {
            if (el.getAttribute("data-tooltip")) {
                el.setAttribute("title", el.getAttribute("data-tooltip"));
                el.removeAttribute("data-tooltip");
            }
        });
    });
</script>

</body>
</html>
