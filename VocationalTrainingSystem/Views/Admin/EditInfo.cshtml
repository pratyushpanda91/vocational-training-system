@model VocationalTrainingSystem.ViewModels.UserProfileViewModel

@{
    ViewBag.Title = "Add User Profile";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Registration</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', sans-serif;
            /* background: linear-gradient(to right, #dfe9f3, #ffffff); */
            background-color: #f2f5f9;
            padding: 40px 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }

        .form-card {
            background: #fff;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 10px 35px rgba(0, 0, 0, 0.1);
            animation: fadeIn 0.6s ease;
        }

        h1, h2 {
            /* text-align: center; */
            margin-bottom: 20px;
            color: #2c3e50;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #2c3e50;
        }

        .form-grid, .address-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 20px;
            margin-bottom: 20px;
        }

        .form-grid {
            grid-template-columns: repeat(2, 1fr);
            .form-actions

        {
            flex-direction: row;
            justify-content: space-between;
        }

        }

        .address-grid {
            grid-template-columns: repeat(3, 1fr);
        }



        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group label {
                font-weight: 600;
                margin-bottom: 8px;
                color: #2d3436;
            }

        input, select {
            padding: 12px 15px;
            border-radius: 8px;
            border: 1px solid #ccc;
            font-size: 16px;
            transition: border 0.3s, box-shadow 0.3s;
        }

            input:focus, select:focus {
                border-color: #27ae60;
                outline: none;
                box-shadow: 0 0 0 3px rgba(39, 174, 96, 0.2);
            }

        .radio-group {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

            .radio-group label {
                font-weight: 400;
            }

        .form-actions {
            display: flex;
            flex-direction: column;
            gap: 15px;
            margin-top: 30px;
        }

        .cancel-btn, .continue-btn {
            padding: 14px 20px;
            font-size: 16px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-weight: 600;
            width: 100%;
            transition: background 0.3s, transform 0.2s;
        }

        .cancel-btn {
            background-color: #f1f1f1;
            color: #555;
        }

            .cancel-btn:hover {
                background-color: #e0e0e0;
            }

        .continue-btn {
            background-color: #3498db;
            color: white;
        }

            .continue-btn:hover {
                background-color: #2c3e50;
                transform: translateY(-2px);
            }

        .form-footer {
            text-align: center;
            margin-top: 25px;
            font-size: 15px;
            color: #555;
        }

            .form-footer a {
                color: #2980b9;
                text-decoration: none;
                font-weight: bold;
            }

                .form-footer a:hover {
                    color: #1a1aff;
                    text-decoration: underline;
                }

    </style>
</head>
<body>
    <div class="container">
        <form id="registrationForm" asp-controller="Admin" asp-action="AddUserProfile" method="post" enctype="multipart/form-data" class="form-card">

            <h1>User Registration</h1>
            @if (!ViewData.ModelState.IsValid)
            {
                <div style="color:red;">
                    <ul>
                        @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@modelError.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <h2>Personal Information</h2>
            <div class="form-grid">
                <div class="form-group">
                    <label>User Name *</label>
                    <input asp-for="UserName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Father's Name *</label>
                    <input asp-for="FatherName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Mother's Name *</label>
                    <input asp-for="MotherName" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Phone Number *</label>
                    <input asp-for="PhoneNumber" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Gmail *</label>
                    <input asp-for="Gmail" class="form-control" type="email" required />
                </div>
                <div class="form-group">
                    <label>Aadhar Number *</label>
                    <input asp-for="AadharNumber" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>DOB *</label>
                    <input asp-for="DOB" class="form-control" type="date" required />
                </div>
            </div>

            <h2>Present Address *</h2>
            <div class="address-grid present-address">
                <input asp-for="PresentAt" placeholder="At" required />
                <input asp-for="PresentPost" placeholder="Post" required />
                <input asp-for="PresentDist" placeholder="Dist" required />
                <input asp-for="PresentTownOrCity" placeholder="Town/City" required />
                <input asp-for="PresentState" placeholder="State" required />
                <input asp-for="PresentCountry" placeholder="Country" required />
                <input asp-for="PresentPIN" type="number" placeholder="PIN" required />
            </div>

            <div class="form-group">
                <label><input type="checkbox" id="sameAsPresent" /> Same as Present Address</label>
            </div>

            <h2>Permanent Address *</h2>
            <div class="address-grid permanent-address">
                <input asp-for="PermanentAt" placeholder="At" required />
                <input asp-for="PermanentPost" placeholder="Post" required />
                <input asp-for="PermanentDist" placeholder="Dist" required />
                <input asp-for="PermanentTownOrCity" placeholder="Town/City" required />
                <input asp-for="PermanentState" placeholder="State" required />
                <input asp-for="PermanentCountry" placeholder="Country" required />
                <input asp-for="PermanentPIN" type="number" placeholder="PIN" required />
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Identification Type *</label>
                    <select asp-for="IdentificationType" required>
                        <option value="">Select</option>
                        <option value="Aadhar">Aadhar</option>
                        <option value="PAN">PAN</option>
                        <option value="Voter ID">Voter ID</option>
                        <option value="Passport">Passport</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Qualification *</label>
                    <select asp-for="Qualification" required>
                        <option value="">Select</option>
                        <option value="10th">10th</option>
                        <option value="12th">12th</option>
                        <option value="Graduate">Graduate</option>
                        <option value="Post-Graduate">Post-Graduate</option>
                        <option value="Diploma">Diploma</option>
                    </select>
                </div>
            </div>

            <h2>Qualification Details *</h2>
            <div class="address-grid">
                <input asp-for="College" placeholder="College" required />
                <input asp-for="Course" placeholder="Course" required />
                <input asp-for="RegdNo" placeholder="Regd No" required />
                <input asp-for="MarksOrCgpa" placeholder="Marks/Cgpa" required />
                <input asp-for="PassingYear" type="number" placeholder="Passing Year" required />
            </div>

            <div class="form-grid">
                <div class="form-group">
                    <label>Gender *</label>
                    <select asp-for="Gender" required>
                        <option value="">Select</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Others">Others</option>
                    </select>
                </div>

                <div class="form-group">
                    <label>Photo ID Proof *</label>
                    <input asp-for="Photo" type="file" class="form-control" optional />
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="continue-btn">Update →</button>
                <button asp-controller="Admin" asp-action="AdminDashboard" class="cancel-btn">Cancel</button>
            </div>
        </form>
    </div>

    <script>
        // Optional: autofill permanent address
        document.getElementById("sameAsPresent").addEventListener("change", function () {
            if (this.checked) {
                document.querySelectorAll('.present-address input').forEach((el, idx) => {
                    document.querySelectorAll('.permanent-address input')[idx].value = el.value;
                });
            }
        });
        document.getElementById("registrationForm").addEventListener("submit", function () {

        alert("Form submitted successfully!");
        });
    </script>
</body>
</html>