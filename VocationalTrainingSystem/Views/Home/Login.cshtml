@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #fff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        .login-container h2 {
            margin-bottom: 25px;
            color: #444;
            text-align: center;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin: 8px 0 20px;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
        }

        label {
            font-weight: bold;
        }

        .btn-submit {
            width: 100%;
            padding: 10px;
            background-color: #2575fc;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s ease-in-out;
        }

        .btn-submit:hover {
            background-color: #1a5fdc;
        }

        .form-footer {
            margin-top: 20px;
            text-align: center;
        }

        .form-footer a {
            color: #2575fc;
            text-decoration: none;
            font-weight: bold;
        }

        .form-footer a:hover {
            text-decoration: underline;
        }

        .validation-message {
            color: red;
            font-size: 13px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div>
                @Html.LabelFor(m => m.UserID)
                @Html.TextBoxFor(m => m.UserID, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "validation-message" })
            </div>

            <div>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "validation-message" })
            </div>

            <button type="submit" class="btn-submit">Login</button>
        }

        <div class="form-footer">
            <p>Don't have an account? <a href="@Url.Action("Register", "Home")">Register</a></p>
        </div>
    </div>
</body>
</html>
